#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

DEB_INSTALL_EXAMPLES_AtroxCoind += debian/examples/*
DEB_INSTALL_MANPAGES_AtroxCoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix AtroxCoind USE_ASM=1 USE_LEVELDB=1
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f AtroxCoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake AtroxCoin-qt.pro USE_ASM=1 USE_LEVELDB=1

# Ensure wrapper is set executable
binary-post-install/AtroxCoind:
	chmod +x $(cdbs_curdestdir)usr/bin/AtroxCoind
binary-post-install/AtroxCoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/AtroxCoin-qt
